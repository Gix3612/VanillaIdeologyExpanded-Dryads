<Patch>

	<!-- Carrier -->

	<Operation Class="PatchOperationConditional">
		<xpath>/Defs/ThingDef[defName = "Dryad_Carrier"]/comps</xpath>
		<nomatch Class="PatchOperationAdd">
			<xpath>/Defs/ThingDef[defName = "Dryad_Carrier"]</xpath>
			<value>
				<comps>
					<li Class="VanillaIdeologyExpanded_Dryads.CompProperties_PawnMerge">
						<requiredCount>3</requiredCount>
						<podToBuild>VDE_CarrierAwakeningCocoon</podToBuild>
						<gizmoImage>Things/Building/UpgradeCarrier</gizmoImage>
						<gizmoLabel>VDE_Awaken</gizmoLabel>
						<gizmoDesc>VDE_AwakenDesc</gizmoDesc>
					</li>
				</comps>
			</value>
		</nomatch>
		<match Class="PatchOperationAdd">
			<xpath>/Defs/ThingDef[defName = "Dryad_Carrier"]/comps</xpath>
			<value>
				<li Class="VanillaIdeologyExpanded_Dryads.CompProperties_PawnMerge">

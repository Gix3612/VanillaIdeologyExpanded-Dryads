	<!-- Cocoon Base -->

	<ThingDef Name="VDE_DryadCocoon" Abstract="True">
		<thingClass>ThingWithComps</thingClass>
		<drawerType>MapMeshAndRealTime</drawerType>
		<altitudeLayer>Building</altitudeLayer>
		<tickerType>Normal</tickerType>
		<graphicData>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<statBases>
			<MaxHitPoints>150</MaxHitPoints>
			<Flammability>1.25</Flammability>
		</statBases>
		<fillPercent>0.5</fillPercent>
		<selectable>true</selectable>
	</ThingDef>

	<!-- Carrier -->

	<ThingDef ParentName="VDE_DryadCocoon">
		<defName>VDE_CarrierAwakeningCocoon</defName>
		<label>carrier awakening pod</label>
		<description>An awakened dryad will emerge from this pod in one day.</description>
		<graphicData>
			<texPath>Things/Building/UpgradeCarrier</texPath>
		</graphicData>
		<comps>
			<li Class="VanillaIdeologyExpanded_Dryads.CompProperties_SpawnAwakened">
				<ticksToSpawn>60000</ticksToSpawn>
				<dryadToSpawn>VDE_AwakenedDryad_Carrier</dryadToSpawn>
			</li>
		</comps>
	</ThingDef>

